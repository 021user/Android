<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">

    <!-- EditText pour le Username -->
    <EditText
        android:id="@+id/username"
        android:layout_width="230dp"
        android:layout_height="39dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="112dp"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true" />

    <!-- EditText pour le mot de passe -->
    <EditText
        android:id="@+id/password"
        android:layout_width="230dp"
        android:layout_height="44dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="172dp"
        android:hint="@string/prompt_password"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:selectAllOnFocus="true" />

    <!-- Bouton de connexion -->

    <!-- ProgressBar -->
    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="280dp"
        android:backgroundTint="#FF5722"
        android:text="Connectez-Vous" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- Texte lien mot de passe oublié -->

    <!-- Texte lien "Créer un compte" -->

    <!-- Diviseur vertical -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="390dp"
        android:text="MOT DE PASSE OUBLIE"
        android:textColor="#032BF4" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="50dp"
        android:text="CREER UN COMPTE"
        android:textColor="#032BF4" />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="150dp"
        android:layout_marginStart="348dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/listDivider" />

    <!-- Diviseur vertical 2 -->

    <!-- Texte "OU" -->

    <!-- Texte "Nouveau sur Reddit ?" -->

    <!-- Texte "Continuer avec Facebook" -->

    <View
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_height="210dp"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/imageView4"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="173dp"
        android:layout_marginEnd="321dp"
        android:text="OU" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="49dp"
        android:text="Nouveau sur Reddit ?" />

    <!-- Icône Facebook -->

    <!-- Icône Email -->

    <!-- Icône Lock -->

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="237dp"
        android:layout_marginEnd="35dp"
        android:text="Continuer avec Facebook"
        android:textColor="#032BF4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="38dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="221dp"
        android:layout_marginEnd="208dp"
        app:srcCompat="@drawable/facebook" />

    <!-- ImageView du logo en bas -->

    <!-- ImageView du logo en haut -->

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="43dp"
        android:layout_height="45dp"
        android:layout_marginTop="106dp"
        app:srcCompat="@drawable/email" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="44dp"
        android:layout_height="37dp"
        android:layout_marginTop="174dp"
        app:srcCompat="@drawable/lock" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="193dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/reddit" />

</RelativeLayout>
